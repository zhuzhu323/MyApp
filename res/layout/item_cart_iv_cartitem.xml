<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:ignore="HardcodedText,ContentDescription" >

    <ImageView
        android:id="@+id/ivDel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/cart_ico_del" />

    <ImageView
        android:id="@+id/ivBookPic"
        android:layout_width="54dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/tvBookName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="全面开战"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvBookName"
            android:gravity="top"
            android:text="200.00￥"
            android:textColor="#dd0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tvBookName"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/tvPrice"
            android:layout_toRightOf="@+id/tvPrice"
            android:gravity="top"
            android:text="x2"
            android:textColor="#999999" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/cart_bg_numberpicker"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/cart_ico_m" />

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/ivp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/cart_ico_p" />
    </LinearLayout>

</LinearLayout>