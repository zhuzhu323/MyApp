<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    tools:context=".MainActivity" >
   

    <RadioGroup
        android:id="@+id/rgShouyeMenu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shouye_bar_bottom"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbShucheng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/shouye_shucheng_selector"
             android:gravity="center"
            android:paddingBottom="6dp"
            android:checked="true"
            android:paddingTop="8dp"
            android:text=" 书城"
            android:textColor="@drawable/tab_menu_text_color_selector"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rbCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/shouye_radiocart_selector"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="8dp"
            android:text="购物车"
            android:textColor="@drawable/tab_menu_text_color_selector"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rbMine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/shouye_mine_selector"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="8dp"
            android:text="我的"
            android:textColor="@drawable/tab_menu_text_color_selector"
            android:textSize="14sp" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pagers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rgShouyeMenu"
        >
    </android.support.v4.view.ViewPager>
</RelativeLayout>
